<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/project_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="15dp"
                android:src="@drawable/ic_back_blue_32" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pertamina_logo"/>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/project_txt_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/average"
            android:gravity="center"
            android:text="Event Landing Page Pertamina"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:background="#f5f5f5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/rounded_orange_button"
                android:text="Go To Workspace"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/rounded_orange_button2"
                android:text="Manage The Project"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Deskripsi : "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:layout_marginRight="50dp"
                android:textAppearance="@style/detailDescText"
                android:text="@string/text_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Client : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/detailDescText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="PT. Pertamina"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Range Time : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:textAppearance="@style/detailDescText"
                android:text="6 Oktober 2018 - 16 Oktober 2018"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Progress Percentage : "/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                app:progress_max="100"
                app:progress_current="80"
                app:progress_reached_color="@color/colorAccent"
                app:progress_reached_bar_height="6dp"
                app:progress_unreached_bar_height="6dp"
                app:progress_text_color="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Finished At : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="16 Oktober 2018"
                android:textAppearance="@style/detailDescText"/>
        </LinearLayout>





    </LinearLayout>
</ScrollView>