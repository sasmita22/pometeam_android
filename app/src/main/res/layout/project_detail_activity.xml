<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/project_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="15dp"
                android:src="@drawable/ic_back_blue_32" />

            <ImageView
                android:id="@+id/project_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pertamina_logo"/>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/project_detail_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/average"
            android:gravity="center"
            android:text="Event Landing Page Pertamina"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:background="#f5f5f5">

            <Button
                android:id="@+id/btn_gotoworkspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/rounded_orange_button"
                android:text="Go To Workspace"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_manageproject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/rounded_orange_button2"
                android:text="Manage The Project"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Deskripsi"/>

            <TextView
                android:id="@+id/project_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:layout_marginRight="50dp"
                android:textAppearance="@style/detailDescText"
                android:text="@string/text_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Project Manager"
                android:textAppearance="@style/detailTitleText"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/step_detail_leader_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/simon" />

                <TextView
                    android:id="@+id/step_detail_leader_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Simon Sinek"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/step_detail_leader_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <View
                    android:id="@+id/view"
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toTopOf="@+id/step_detail_leader_jabatan"
                    app:layout_constraintStart_toEndOf="@+id/step_detail_leader_image"
                    app:layout_constraintTop_toBottomOf="@+id/step_detail_leader_name" />

                <TextView
                    android:id="@+id/step_detail_leader_jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Senior Programmer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/step_detail_leader_image"
                    app:layout_constraintTop_toBottomOf="@+id/view" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Client "/>

            <TextView
                android:id="@+id/project_detail_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/detailDescText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="PT. Pertamina"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Range Time"/>

            <TextView
                android:id="@+id/project_detail_range_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:textAppearance="@style/detailDescText"
                android:text="6 Oktober 2018 - 16 Oktober 2018"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Progress Percentage"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                app:progress_max="100"
                app:progress_current="80"
                app:progress_reached_color="@color/colorAccent"
                app:progress_reached_bar_height="6dp"
                app:progress_unreached_bar_height="6dp"
                app:progress_text_color="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/detailTitleText"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="Finished At"/>

            <TextView
                android:id="@+id/project_detail_ended_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_left_text"
                android:text="16 Oktober 2018"
                android:textAppearance="@style/detailDescText"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>